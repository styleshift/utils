    "format": "prettier --write .",
    "clean": "rm -rf dist node_modules/.cache coverage"
  },
  "devDependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "prettier": "^3.4.2",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "author": "Jeroen Gerits <jeroen@gerits.email>"
}
